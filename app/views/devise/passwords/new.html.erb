<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Forgot password?</h2><br />

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div><%= f.label :email %>
		  <%= f.email_field :email, autofocus: true, class: "form-control" %></div><br />

		  <div><%= f.submit "Get reset password instructions", class: "btn btn-lg btn-primary btn-block" %></div><br />
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>	