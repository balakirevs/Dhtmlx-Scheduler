<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Label</th>
      <th>Email</th>
      <th>Role</th>
      <th>Team</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.label %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.team.label %><td>
        <td><%= link_to 'Show', user, class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
