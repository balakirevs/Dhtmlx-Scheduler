      <% end %>
      </ul>
    </div>
  <% end %>

  
  <%= f.label :label %><br>
  <%= f.text_field :label %><br />

  <%= f.label :email %><br>
  <%= f.text_field :email %><br />

  <%= f.label :password %><br />
  <%= f.password_field :password %><br />

  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %><br />

  <%= f.label :role %><br />
  <%= f.select :role, options_for_select(["manager", "teamleader", "reviewer", "editor", "administrator"], :selected => f.object.role) %><br /><br />
  
