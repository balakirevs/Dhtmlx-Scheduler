<fieldset>
  <%= f.text_area :label %><br />
	<%= f.text_field :email %><br />
	<%= f.password_field :password %><br />
  <%= f.password_field :password_confirmation %><br />
  <%= f.select :role, options_for_select(["manager", "teamleader", "reviewer", "editor", "administrator"], :selected => f.object.role) %><br />
  <%= f.check_box :_destroy %>
  <%= f.label :_destroy, "Remove User", class: "btn btn-danger btn-xs" %>

  <%= f.fields_for :works, f do |builder| %>
    <%= render 'work_fields', f: builder %>   
  <% end %>
  <%= link_to_add_fields "Add Periods", f, :works %>
</fieldset>